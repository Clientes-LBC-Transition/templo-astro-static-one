---
import Layout from "../../layouts/Layout.astro";
import Header from "../../components/Header.astro";
import Footer from "../../components/Footer.astro";
---

<Layout title="Templo Transition">
	<Header />
	<div class="main">
		<p><a class="link--back" href="/galeria"> Volver a la galeria</a></p>
		<h1>Evento</h1>
		<div class="galeria auto-grid">
			<img src="/images/sliders/slider_1.jpg" alt="" />
			<img src="/images/sliders/slider_2.jpg" alt="" />
			<img src="/images/sliders/slider_3.jpg" alt="" />
			<img src="/images/sliders/slider_4.jpg" alt="" />
			<img src="/images/sliders/slider_5.jpg" alt="" />
			<img src="/images/sliders/slider_6.jpg" alt="" />
			<img src="/images/sliders/slider_7.jpg" alt="" />
			<img src="/images/sliders/slider_8.jpg" alt="" />
		</div>
	</div>
	<Footer />
</Layout>

<style>
	.main {
		margin: auto;
		padding: 1rem;
		width: 100%;
		max-width: calc(100% - 2rem);
		color: white;
		font-size: 20px;
		line-height: 1.6;
		border: 1px solid blue;
	}

	.link--back {
		text-decoration: none;
		color: white;
		font-size: 1.33rem;
	}

	h1 {
		color: red;
	}

	.auto-grid {
		display: grid;
		grid-template-columns: repeat(3, 1fr);
		gap: 1rem;
	}

	.auto-grid > img {
		width: 100%;
		height: 100%;
		object-fit: cover;
	}
</style>
