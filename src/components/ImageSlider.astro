---
interface Props {
	index?: string;
}
const images = [
	"/images/sliders/slider_1.jpg",
	"/images/sliders/slider_2.jpg",
	"/images/sliders/slider_3.jpg",
	"/images/sliders/slider_4.jpg",
	"/images/sliders/slider_5.jpg",
	"/images/sliders/slider_6.jpg",
	"/images/sliders/slider_7.jpg",
	"/images/sliders/slider_8.jpg",
];

let currentIndex = 0;
let { index } = Astro.props;
let num = parseInt(index);

if (index) {
	currentIndex = num % 7;
}

function nextImage() {
	currentIndex = (currentIndex + 1) % images.length;
}

function prevImage() {
	currentIndex = (currentIndex - 1 + images.length) % images.length;
}
---

<div class="slider">
	<button style="display: none;">&lt;</button>
	<img
		src={"/templo-astro-static-one" + images[currentIndex]}
		alt={`Image ${currentIndex + 1}`}
	/>
	<button style="display: none;">&gt;</button>
</div>

<style>
	.slider {
		display: flex;
		align-items: center;
		justify-content: center;
		position: relative;
		width: 100%;
		height: 250px;
		max-width: 800px;
	}

	.slider img {
		width: 100%;
		height: 100%;
		border-radius: 8px;
		object-fit: cover;
	}

	.slider button {
		background-color: rgba(0, 0, 0, 0.5);
		color: white;
		border: none;
		padding: 10px;
		cursor: pointer;
		position: absolute;
		top: 50%;
		transform: translateY(-50%);
		z-index: 1;
	}

	.slider button:hover {
		background-color: rgba(0, 0, 0, 0.8);
	}

	.slider button:first-of-type {
		left: 10px;
	}

	.slider button:last-of-type {
		right: 10px;
	}
</style>
