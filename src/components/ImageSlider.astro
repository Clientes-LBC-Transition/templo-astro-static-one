---
const images = [
	"/logo-templo-2020.png",
	"https://picsum.photos/200",
	"https://picsum.photos/200",
];
let currentIndex = 0;

function nextImage() {
	currentIndex = (currentIndex + 1) % images.length;
}

function prevImage() {
	currentIndex = (currentIndex - 1 + images.length) % images.length;
}
---

<div class="slider">
	<button style="display: none;">&lt;</button>
	<img src={images[currentIndex]} alt={`Image ${currentIndex + 1}`} />
	<button style="display: none;">&gt;</button>
</div>

<style>
	.slider {
		display: flex;
		align-items: center;
		justify-content: center;
		position: relative;
		width: 100%;
		max-width: 800px;
		margin: auto;
	}

	.slider img {
		width: 100%;
		height: auto;
		border-radius: 8px;
	}

	.slider button {
		background-color: rgba(0, 0, 0, 0.5);
		color: white;
		border: none;
		padding: 10px;
		cursor: pointer;
		position: absolute;
		top: 50%;
		transform: translateY(-50%);
		z-index: 1;
	}

	.slider button:hover {
		background-color: rgba(0, 0, 0, 0.8);
	}

	.slider button:first-of-type {
		left: 10px;
	}

	.slider button:last-of-type {
		right: 10px;
	}
</style>
